{
  "name": "aps-gui",
  "version": "0.3.1",
  "description": "The GUI component of the APS workflow",
  "author": "Sindre Nistad <snis@equinor.com>",
  "private": true,
  "scripts": {
    "serve:gui": "vue-cli-service serve --host=localhost",
    "serve:api": "make -C ../.. run-rms.uipy-mock",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "test:unit": "vue-cli-service test:unit",
    "test:e2e": "vue-cli-service test:e2e"
  },
  "dependencies": {
    "@mdi/font": "^2.4.85",
    "@statnett/vue-plotly": "^0.2.0",
    "material-design-icons-iconfont": "^3.0.3",
    "mathjs": "^5.2.0",
    "plotly.js-dist": "^1.39.2",
    "uuid": "^3.3.2",
    "vue": "^2.5.16",
    "vue-router": "^3.0.1",
    "vue-swatches": "^1.0.1",
    "vuelidate": "^0.7.4",
    "vuetify": "^1.0.19",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@babel/polyfill": "^7.0.0",
    "@vue/cli-plugin-babel": "^3.0.1",
    "@vue/cli-plugin-eslint": "^3.0.1",
    "@vue/cli-plugin-unit-jest": "^3.0.1",
    "@vue/cli-service": "^3.0.1",
    "@vue/eslint-config-standard": "^3.0.1",
    "@vue/test-utils": "^1.0.0-beta.20",
    "axios": "^0.18.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^23.0.1",
    "babel-loader": "^8.0.4",
    "babel-plugin-transform-imports": "^1.4.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-vue-types": "^0.2.0",
    "file-loader": "^2.0.0",
    "jest-webpack-resolver": "^0.3.0",
    "lint-staged": "^7.2.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "url-loader": "^1.0.1",
    "vue-axios": "^2.1.1",
    "vue-cli-plugin-vuetify": "^0.2.1",
    "vue-template-compiler": "^2.5.16",
    "vue-types": "^1.3.2",
    "webpack": "^4.12.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/reccomended",
      "@vue/standard"
    ],
    "rules": {
      "vue/attribute-hyphenation": [
        "error",
        "always"
      ],
      "vue/attributes-order": "error",
      "vue/html-quotes": [
        "error",
        "double"
      ]
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "chrome 56"
  ],
  "jest": {
    "verbose": true,
    "testURL": "http://localhost/",
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.vue$": "vue-jest",
      ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "^.+\\.jsx?$": "babel-jest"
    },
    "resolver": "jest-webpack-resolver",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!@vue|(?!deck.gl)|ng-dynamic)"
    ],
    "snapshotSerializers": [
      "jest-serializer-vue"
    ],
    "testMatch": [
      "**/tests/unit/**/*.spec.(js|jsx|ts|tsx)|**/__tests__/*.(js|jsx|ts|tsx)",
      "<rootDir>/(tests/unit/**/*.spec.(js|jsx|ts|tsx)|**/__tests__/*.(js|jsx|ts|tsx))"
    ]
  },
  "jestWebpackResolver": {
    "webpackConfig": "./node_modules/@vue/cli-service/webpack.config.js"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
